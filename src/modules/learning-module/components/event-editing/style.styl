body
  margin 0
  padding 0
  overflow hidden
  background-color #F0F0F0
  height 100%
  overflow auto


.navbar
  color #dcdcdc

#location
  text-decoration none
  border none 
  background-color #ffffff
  color #444341
  -webkit-border-radius 0px
  -moz-border-radius 0px
  -ms-border-radius 0px
  -o-border-radius 0px
  border-radius 0px
  outline none
  border none
  margin-left 12px

#curr-loc
  display none

.navbar button
  padding 10px
  text-decoration none
  border none
  text-align center
  background-color #FFFFFF
  -webkit-transition-duration: 0.4s;
  transition-duration: 0.4s;
  color #444341

.navbar button:hover
  background-color: #F1F1F1

#assets
  border 1px solid #002054

.workspace
  display flex

.scene-selector
  border 1px solid #000000
  height 75vh
  width 20%
  margin 12px
  overflow-y scroll
  overflow-x hidden

  

#scene-canvas
  border 1px solid #000000
  margin 12px 24px
  height 75vh
  width 75%
  overflow hidden


.lessons, .topics, .subtopics
  height 20%
  width 90%
  margin 5% 5%
  border 1px solid black
  cursor pointer
  overflow hidden

p
  text-align center
  cursor default

#assets-item
  height 5%
  width 10%
  margin 10px
body
  margin 0
  padding 0
  overflow hidden
  background-color #F0F0F0
  height 100%
  overflow auto


.navbar
  padding 18px
  color #dcdcdc
  border 1px solid #000000

.container
  height 100%
  display flex

#canvas
  width 50%
  height 80vh
  margin-left 2%
  background-color #dcdcdc
  border 1px solid #a9a9a9
  overflow scroll
  display flex
  flex-direction column

#canvas, #scene-repo
  margin-top 30px
  

#scene-repo
  width 25%
  margin-left 3%
  background-color #d1e1f9
  border 1px solid #a9a9a9
  overflow scroll

#lessons, #topics, #subtopics
  width 50%
  height 10%
  margin-top 5px
  margin-left 25%

#control
  display flex
  flex-direction column
  text-align center
  padding-top 30px

#control input 
  width 50%
  margin-bottom 12px
  height 40px
  text-align center

#apply
  margin-top 12px
  width 30%
  margin-left 37%

#finish
  width 75%
  font-size 20px
  margin-left 15%
  position relative
  margin-top 148%